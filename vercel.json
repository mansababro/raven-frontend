{
  "outputDirectory": "build",
  "redirects": [
    {
      "source": "/(.*)",
      "has": [{ "type": "host", "value": "www.askraven.app" }],
      "destination": "https://askraven.app/$1",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)\\.html",
      "headers": [{ "key": "Cache-Control", "value": "no-store" }]
    },
    {
      "source": "/",
      "headers": [{ "key": "Cache-Control", "value": "no-store" }]
    },
    {
      "source": "/assets/(.*)",
      "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }]
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}